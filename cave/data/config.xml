<system>
    <location>Burdick 115</location>
    <equipment>
        <!--
        device
            : id : internal id of the device
            : type : type of equipment
            : name : name that appears on the control screen
            : ip : ip address
            : port : ip port
            : serial : serial port device is connected to
            : baud : serial baud rate
            : driver : path to driver class
            : power : whether this device should receive power on/off controls (unimplemented currently)
        -->
        <equip id="pj01" type="projector" name="NEC projector" ip="161.31.66.134" port="7142"
                driver="cave.drivers.projector.nec.NEC" power="1">
            <inputs type="base64" default="RGB_1">
                <!--
                type
                    : numeric : input codes are to be treated as numbers
                    : string : input codes are to be treated as ascii strings
                    : base64 : input codes are base64 encoded binary data
                    : bytes : byte-string (non-base64-encoded)

                default
                    : name of the input to select on reset
                -->
                <input name="RGB_1" icon="cave/data/images/computer.png">AQ==</input>
                <input name="HDMI_1">Gg==</input>
                <input name="VIDEO_1">Bg==</input>
            </inputs>
        </equip>
        <equip id="pj02" type="projector" name="NEC projector 2" ip="161.31.66.150" port="4352"
            driver="cave.drivers.projector.pjlink.PJLink" power="1">
            <inputs type="bytes" default="HDMI_1">
                <input name="RGB_1" icon="cave/data/images/computer.png">11</input>
                <input name="HDMI_1" icon="cave/data/images/apple.png">31</input>
                <input name="VIDEO_1">21</input>
            </inputs>
        </equip>
        <!--<equip id="sw01" type="switcher" name="Kramer switcher"
               driver="cave.drivers.switcher.dockerpirelay.DockerPiRelay" power="0">
            <inputs type="numeric" default="IN_1">
                <input name="IN_1" icon="cave/data/images/keyboard.png">1</input>
                <input name="IN_2">2</input>
            </inputs>
        </equip>-->
    </equipment>
    <home>
        <devices default="Computer">
            <device name="Computer" icon="computer.png">
                <deviceinputs>
                    <deviceinput equip="pj01">RGB_1</deviceinput>
                    <deviceinput equip="sw01">IN_1</deviceinput>
                </deviceinputs>
            </device>
            <device name="Apple TV" icon="apple.png">
                <deviceinputs>
                    <deviceinput equip="pj01">RGB_1</deviceinput>
                    <deviceinput equip="sw01">IN_2</deviceinput>
                </deviceinputs>
            </device>
        </devices>
    </home>
    <power>
        <on>
            <equip name="pj01"/>
            <equip name="pj02"/>
        </on>
        <off>
            <equip name="pj01"/>
            <equip name="pj02"/>
        </off>
    </power>
</system>
